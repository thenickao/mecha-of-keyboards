<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/app.css">
    <title>Edit</title>
</head>
<body>
    <h1>Edit Keyboard</h1>

    <nav>
        <a class="link" href="/keyboards/<%=keyboard._id%>">Back to <%=keyboard.name%></a>
    </nav><br>

    <form class="new" action="/keyboards/<%=keyboard._id%>?_method=PUT" method="POST">
        Name: <input type="text" name="name" value="<%=keyboard.name%>"/>*<br>
            
        Keyboard Size: <select name="keyboardSize" value="<%=keyboard.keyboardSize%>" onchange="toggleCustomSize()">
            <option value="">Select a size</option>
            <option value="60%">60%</option>
            <option value="65%">65%</option>
            <option value="75%">75%</option>
            <option value="80%">80% | TKL | Tenkeyless</option>
            <option value="full">100% | Full Size</option>
            <option value="custom">Other (specify below)</option>
        </select>*<br>
        <div id="customSizeField" style="display:none;">
            Other Size: <input type="text" name="otherSize" value="<%=keyboard.otherSize%>"/>
        </div>
        
        Connection: <select name="connection" value="<%=keyboard.connection%>">
            <option value="">Select an option</option>
            <option value="Wired(Detachable)">Wired(Detachable)</option>
            <option value="Wired(Non-Detachable)">Wired(Non-Detachable)</option>
            <option value="Wireless(Bluetooth)">Wireless</option>
        </select>*<br>
        <div id="connection" style="display:none;">
            Connection Type(Output): <select name="detach"> value="<%=keyboard.detach%>"
                <option value="USB C"></option>
                <option value="USB A"></option>
                <option value="Mini USB"></option>

        </div>
        <div id="connection" style="display:none;">
            Connection Type: <select name="nonDetach" value="<%=keyboard.nonDetach%>">
                <option value="USB A"></option>
                <option value="USB C"></option>
        </div>

        
        Switches: <input type="text" name="switches" value="<%=keyboard.switches%>"/><br>
        
        Switch Facing: <select name="switchFacing" value="<%=keyboard.switchFacing%>">
            <option value="">Select a facing</option>
            <option value="North">North</option>
            <option value="South">South</option>
        </select>*<br>

        <!-- Hot-Swappable: <input type="checkbox" name="hotswap" value="<%=keyboard.hotswap%>" onclick="getCheckboxValue(this)"/>*<br> -->

        Stabilizer Type: <select name="stabilizerType" value="<%=keyboard.stabilizerType%>">
            <option value="">Select a type</option>
            <option value="Clip-In">Clip-In</option>
            <option value="Screw-In">Screw-In</option>
        </select>*<br>

        <!-- Knob: <input type="checkbox" name="knob" value="true" value="<%=keyboard.knob%>" onclick="getCheckboxValue(this)"/>*<br>
        Body Materials: <input type="text" name="bodyMaterials" placeholder="Ex: Aluminum/ABS Plastic" value="<%=keyboard.bodyMaterials%>"/>*<br> -->
        
        Plate Options: <select type="text" name="plateOptions" value="<%=keyboard.plateOptions%>">
            <option value="">Select an option</option>
            <option value="Polycarbonate">Polycarbonate</option>
            <option value="Aluminum">Aluminum</option>
            <option value="Brass">Brass</option>
            <option value="Stainless Steel">Stainless Steel</option>
        </select>*<br>

        <!-- Backlit/RGB: <input type="checkbox" name="rgb" value="<%=keyboard.rgb%>" onclick="getCheckboxValue(this)"/>*<br> -->
        Price: $<input type="text" name="price" placeholder="USD" value="<%=keyboard.averagePrice%>"/>*<br>
        Image URL: <input type="text" name="img" value="<%=keyboard.img%>"/><br>
        * required fields<br><br>
    <input class="submit" type="submit" value="Submit Changes" /><br>
    
    </form>
    
    

    <script>
        function toggleCustomSize() {
          var customSizeField = document.getElementById("customSizeField");
          var keyboardSize = document.getElementsByName("keyboardSize")[0].value;
          if (keyboardSize == "custom") {
            customSizeField.style.display = "block";
          } else {
            customSizeField.style.display = "none";
          }
        }
        var keyboardSize = '<%=keyboard.keyboardSize%>';
        var select = document.getElementsByName('keyboardSize')[0];
        if (keyboardSize) {
            select.value = keyboardSize;
            if (keyboardSize === 'custom') {
                document.getElementById('customSizeField').style.display = 'block';
            }
        }

        function toggleConnectionType() {
          var connectionType = document.getElementById("connectionType");
          var connection = document.getElementsByName("connection")[0].value;
          if (connection == "detach" || connection == "nonDetach") {
            connectionType.style.display = "block";
          } else {
            connectionType.style.display = "none";
          }
        }
        var connection = '<%=keyboard.detach%>';
        var select = document.getElementsByName('connection')[0];
        if (connection) {
            select.value = connection;
            if (connection === 'detach') {
                document.getElementById('detach').style.display = 'block';
            } else {
                document.getElementById('nonDetach').style.display = 'block';
            }
        }
      </script>
</body>
</html>