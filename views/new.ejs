<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/app.css">
    <title>New</title>
</head>
<body>
    <nav>
        <a href="/keyboards">Back to All Keyboards</a>
    </nav>
    <h1>New Keyboard Page</h1>
        <form action="/keyboards" method="POST">
            Name: <input type="text" name="name" />*<br>
            
            Keyboard Size: <select name="keyboardSize" onchange="toggleCustomSize()">
                <option value="">Select a size</option>
                <option value="60%">60%</option>
                <option value="65%">65%</option>
                <option value="75%">75%</option>
                <option value="80%">80% | TKL | Tenkeyless</option>
                <option value="full">100% | Full Size</option>
                <option value="custom">Other (specify below)</option>
            </select>*<br>
            <div id="customSizeField" style="display:none;">
                Other Size: <input type="text" name="otherSize" />
            </div>
    
            Layout Name: <input type="text" name="layoutName" placeholder="Ex: Standard/Alice" /><br>
            
            Connectivity: <select name="connectivity">
                <option value="">Select an option</option>
                <option value="Wired(Detachable) Type-C USB">Wired(Detachable) Type-C USB</option>
                <option value="Wired(Detachable) Mini USB">Wired(Detachable) Mini USB</option>
                <option value="Wired(Non-Detachable) Type-A USB">Wired(Non-Detachable) Type-A USB</option>
                <option value="Wireless (Bluetooth)">Wireless (Bluetooth)</option>
                <option value="Wireless (Dongle)">Wireless (Dongle)</option>

            </select>*<br>
            
            Switches: <input type="text" name="switches" /><br>
            
            Switch Facing: <select name="switchFacing">
                <option value="">Select a facing</option>
                <option value="North">North</option>
                <option value="South">South</option>
            </select>*<br>

            <!-- Hot-Swappable: <input type="checkbox" name="hotswap" />*<br> -->
            
            Stabilizer Type: <select name="stabilizerType">
                <option value="">Select a type</option>
                <option value="Clip-In">Clip-In</option>
                <option value="Screw-In">Screw-In</option>
            </select>*<br>

            <!-- Knob: <input type="checkbox" name="knob"/>*<br> -->
            Body Materials: <input type="text" name="bodyMaterials" placeholder="Ex: Aluminum/ABS Plastic" />*<br>
            
            Plate Options: <select type="text" name="plateOptions">
                <option value="">Select an option</option>
                <option value="Polycarbonate">Polycarbonate</option>
                <option value="Aluminum">Aluminum</option>
                <option value="Brass">Brass</option>
                <option value="Stainless Steel">Stainless Steel</option>
            </select>*<br>

            <!-- Backlit/RGB: <input type="checkbox" name="rgb"/>*<br> -->
            Average Price: $<input type="text" name="averagePrice" placeholder="USD" />*<br>
            Image URL: <input type="text" name="img" /><br>
            <input type="submit" name="" value="Send this Keyboard to the Mecha"/>
        </form>
        *required fields
        
        
        <script>
            function toggleCustomSize() {
              var customSizeField = document.getElementById("customSizeField");
              var keyboardSize = document.getElementsByName("keyboardSize")[0].value;
              if (keyboardSize == "custom") {
                customSizeField.style.display = "block";
              } else {
                customSizeField.style.display = "none";
              }
            }
          </script>
</body>
</html>